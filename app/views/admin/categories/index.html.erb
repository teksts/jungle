<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th colspan="2">Products</th>
          <th>Total Products</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <%= render 'category', category: category, products: category.products.map{|product| product.name}.join(", ") %>
        <% end %>
      </tbody>
    </table>

  </div>

</section>